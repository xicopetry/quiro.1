<%- model_class = Anamnesi -%>
<div class="page-header">
  <h1><%=t '.title', :default => Anamnesi %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:queixa_principal) %></th>
      <th><%= model_class.human_attribute_name(:como_aconteceu) %></th>
      <th><%= model_class.human_attribute_name(:data_inicio) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @anamnesis.each do |anamnesi| %>
      <tr>
        <td><%= anamnesi.id %></td>
        <td><%= anamnesi.queixa_principal %></td>
        <td><%= anamnesi.como_aconteceu %></td>
        <td><%= anamnesi.data_inicio %></td>
        <td><%=l anamnesi.created_at, format: :long %></td>
        <td>
          <%= link_to anamnesi_path(anamnesi), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to anamnesi_path(anamnesi), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_anamnesi_path,
            :class => 'btn btn-primary' %>
